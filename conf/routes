# Routes
GET           /                                controllers.HomeController.index

# HTMX
POST          /orders                          controllers.OrderController.createOrder
GET           /orders                          controllers.OrderController.listOrders
GET           /outbox/stats                    controllers.OrderController.outboxStats
PUT           /orders/:id/status               controllers.OrderController.updateStatus(id: Long)
DELETE        /orders/:id/cancel               controllers.OrderController.cancelOrder(id: Long)
DELETE        /orders/:id/delete               controllers.OrderController.deleteOrder(id: Long)

# JSON API
POST          /api/orders                      controllers.OrderController.createOrderJson
GET           /api/orders                      controllers.OrderController.listOrdersJson
GET           /api/outbox/stats                controllers.OrderController.outboxStatsJson
PUT           /api/orders/:id/status           controllers.OrderController.updateStatusJson(id: Long)
DELETE        /api/orders/:id/cancel           controllers.OrderController.cancelOrderJson(id: Long)
DELETE        /api/orders/:id                  controllers.OrderController.deleteOrderJson(id: Long)

# Webhook Simulator
GET           /simulator/stats                 controllers.WebhookSimulatorController.stats
POST          /simulator/webhook/*path         controllers.WebhookSimulatorController.webhook(path: String)
PUT           /simulator/webhook/*path         controllers.WebhookSimulatorController.webhook(path: String)
PATCH         /simulator/webhook/*path         controllers.WebhookSimulatorController.webhook(path: String)
DELETE        /simulator/webhook/*path         controllers.WebhookSimulatorController.webhook(path: String)
POST          /simulator/always-succeed        controllers.WebhookSimulatorController.alwaysSucceed
PUT           /simulator/always-succeed        controllers.WebhookSimulatorController.alwaysSucceed
POST          /simulator/always-fail           controllers.WebhookSimulatorController.alwaysFail
POST          /simulator/always-400            controllers.WebhookSimulatorController.alwaysBadRequest