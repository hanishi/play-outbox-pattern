# Routes
GET           /                                                           controllers.HomeController.index

# Documentation
GET           /docs/*file                                                 controllers.Assets.at(path="/public/docs", file)

# HTMX
POST          /orders                                                     controllers.OrderController.createOrder
GET           /orders                                                     controllers.OrderController.listOrders
GET           /outbox/stats                                               controllers.OrderController.outboxStats
PUT           /orders/:id/status                                          controllers.OrderController.updateStatus(id: Long)
DELETE        /orders/:id/cancel                                          controllers.OrderController.cancelOrder(id: Long)
DELETE        /orders/:id/delete                                          controllers.OrderController.deleteOrder(id: Long)

# JSON API
POST          /api/orders                                                 controllers.OrderController.createOrderJson
GET           /api/orders                                                 controllers.OrderController.listOrdersJson
GET           /api/outbox/stats                                           controllers.OrderController.outboxStatsJson
GET           /api/outbox/events                                          controllers.OrderController.listAllEventsJson
GET           /api/outbox/events/:id                                      controllers.OrderController.debugEventJson(id: Long)
PUT           /api/orders/:id/status                                      controllers.OrderController.updateStatusJson(id: Long)
DELETE        /api/orders/:id/cancel                                      controllers.OrderController.cancelOrderJson(id: Long)
DELETE        /api/orders/:id                                             controllers.OrderController.deleteOrderJson(id: Long)

# Webhook Simulator
GET           /simulator/stats                                            controllers.WebhookSimulatorController.stats
POST          /simulator/webhook/inventory                                controllers.WebhookSimulatorController.inventoryWebhook
DELETE        /simulator/webhook/inventory/:id                            controllers.WebhookSimulatorController.inventoryRevert(id: String)
POST          /simulator/webhook/shipping                                 controllers.WebhookSimulatorController.shippingWebhook
POST          /simulator/webhook/shipping/:id/cancel                      controllers.WebhookSimulatorController.shippingRevert(id: String)
POST          /simulator/webhook/billing                                  controllers.WebhookSimulatorController.billingWebhook
POST          /simulator/webhook/billing/:id/refund                       controllers.WebhookSimulatorController.billingRevert(id: String)
POST          /simulator/webhook/email                                    controllers.WebhookSimulatorController.alwaysFail
POST          /simulator/webhook/email/:id/cancel                         controllers.WebhookSimulatorController.emailRevert(id: String)

# Retry-After demo endpoints
